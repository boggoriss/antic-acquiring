{
  "moduleFileExtensions": [
    "js",
    "json",
    "ts"
  ],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "@lib/domain/(.*)": "<rootDir>/../libs/domain/src/$1",
    "@lib/domain": "<rootDir>/../libs/domain/src",
    "@lib/base-helper/(.*)": "<rootDir>/../libs/base-helper/src/$1",
    "@lib/base-helper": "<rootDir>/../libs/base-helper/src",
    "@lib/acquiring/(.*)": "<rootDir>/../libs/acquiring/src/$1",
    "@lib/acquiring": "<rootDir>/../libs/acquiring/src"
  }
}